    <LinearLayout
        android:id="@+id/SHIMMERTEXTVIEWS"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/tagline"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:fontFamily="serif"
            android:text="Just"
            android:textColor="@color/fbutton_color_carrot"
            android:textSize="30sp"
            app:reflectionColor="#0B0A0A" />
        <com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/tagline2"
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:fontFamily="serif"
            android:textSize="20sp"
            app:reflectionColor="@color/colorAccent"
            android:layout_gravity="center_horizontal" />
        <com.romainpiel.shimmer.ShimmerTextView
            android:id="@+id/tagline3"
            android:text="Bakers"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/fbutton_color_carrot"
            android:fontFamily="serif"
            android:textSize="40sp"
            app:reflectionColor="#0B0A0A"
            android:layout_gravity="center_horizontal" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="where you get"
        android:id="@+id/textView"
        android:textColor="#0B0A0A"
        android:fontFamily="serif"
        android:textSize="20sp"
        android:layout_marginTop="50dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="the best baking products..."
        android:id="@+id/textView2"
        android:layout_gravity="center_horizontal"
        android:textColor="#0B0A0A"
        android:fontFamily="serif"
        android:textSize="20sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/textView3"
        android:layout_gravity="center_horizontal"
        android:textColor="@color/colorWhite"
        android:fontFamily="serif"
        android:textSize="20sp"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/fb"
        android:background="#00fffefe"
        android:src="@drawable/fb"/>

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/gmail"
        android:layout_gravity="center_horizontal"
        android:src="@drawable/gmail"
        android:background="#00fffefe"
        android:layout_marginLeft="10dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/linkedin"
        android:layout_gravity="center_vertical"
        android:background="#00fffefe"
        android:src="@drawable/linked"
        android:layout_marginLeft="10dp" />

    <ImageButton
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:id="@+id/github"
        android:layout_gravity="center_vertical"
        android:src="@drawable/github"
        android:background="#00fffefe"
        android:layout_marginLeft="10dp" />
    </LinearLayout>
