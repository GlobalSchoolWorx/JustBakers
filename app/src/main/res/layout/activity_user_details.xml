<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:fbutton="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/wall2"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        tools:context=".UserDetailsActivity">

        <AutoCompleteTextView
            android:id="@+id/name"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:background="@drawable/back"
            android:cursorVisible="true"
            android:fontFamily="serif"
            android:hint="Your Name"
            android:includeFontPadding="true"
            android:lineSpacingExtra="12sp"
            android:maxLines="1"
            android:popupBackground="@drawable/card_shadow"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textColorHighlight="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textColorLink="@color/colorWhite"
            android:textCursorDrawable="@drawable/blackback"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            >

            <TextView
                android:id="@+id/tvCountryCode"
                android:textColor="@color/colorWhite"
                android:layout_width="wrap_content"
                android:layout_height="55dp"
                android:textSize="20sp"
                android:background="@drawable/back"
                android:textStyle="bold"
                android:fontFamily="serif"
                android:lineSpacingExtra="12sp"
                android:maxLines="1"
                android:singleLine="true"
                android:gravity="center_vertical"
                android:popupBackground="@drawable/card_shadow"
                android:text="+91  " />

            <AutoCompleteTextView
                android:id="@+id/contact"
                android:layout_width="match_parent"
                android:layout_height="55dp"
                android:gravity="center_vertical"
                android:background="@drawable/back"
                android:cursorVisible="true"
                android:fontFamily="serif"
                android:textSize="20sp"
                android:hint="Your Contact Number"
                android:includeFontPadding="true"
                android:inputType="number"
                android:lineSpacingExtra="12sp"
                android:maxLines="1"
                android:popupBackground="@drawable/card_shadow"
                android:singleLine="true"
                android:text=""
                android:textColor="@color/colorWhite"
                android:textColorHighlight="@color/colorWhite"
                android:textColorHint="@color/colorWhite"
                android:textColorLink="@color/colorWhite"
                android:textCursorDrawable="@drawable/blackback"
                />
        </LinearLayout>
        <!--
            <EditText
                android:id="@+id/area_list"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="20dp"
                android:layout_marginTop="100dp"
                android:background="@drawable/back"
              >

            </EditText>
            -->

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Enter your Address in Pune where delivery of products is required." />

        <AutoCompleteTextView
            android:id="@+id/flat_number"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:fastScrollAlwaysVisible="true"
            android:background="@drawable/back"
            android:scrollbars="vertical"
            android:minLines="2"
            android:textColor="@color/colorWhite">

        </AutoCompleteTextView>
        <!--
            <TextView
                android:id="@+id/textView5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:text="Your Building and Flat Number." />
            -->

        <AutoCompleteTextView
            android:id="@+id/society"
            android:layout_width="match_parent"
            android:layout_height="55dp"

            android:background="@drawable/back"
            android:cursorVisible="true"
            android:fontFamily="serif"
            android:includeFontPadding="true"
            android:lineSpacingExtra="12sp"
            android:maxLines="3"
            android:minLines="1"
            android:popupBackground="@drawable/card_shadow"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textColorHighlight="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textColorLink="@color/colorWhite"
            android:textCursorDrawable="@drawable/blackback"

            />

        <AutoCompleteTextView
            android:id="@+id/pincode"
            android:layout_width="match_parent"
            android:layout_height="55dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/back"
            android:cursorVisible="true"
            android:fontFamily="serif"
            android:hint="Your Pincode"
            android:includeFontPadding="true"
            android:inputType="number"
            android:lineSpacingExtra="12sp"
            android:maxLines="1"
            android:popupBackground="@drawable/card_shadow"
            android:singleLine="true"
            android:text=""
            android:textColor="@color/colorWhite"
            android:textColorHighlight="@color/colorWhite"
            android:textColorHint="@color/colorWhite"
            android:textColorLink="@color/colorWhite"
            android:textCursorDrawable="@drawable/blackback"

            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp">
            <info.hoang8f.widget.FButton
                android:id="@+id/placeOrderButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_gravity="center_horizontal"
                android:text="Verify OTP"
                android:textColor="@color/colorWhite"
                android:drawableLeft="@android:drawable/ic_menu_send"
                android:textSize="18sp"
                android:textStyle="bold"
                fbutton:cornerRadius="5dp"
                fbutton:fButtonColor="#AE6F33"
                fbutton:shadowColor="#AE6F33" />

            <info.hoang8f.widget.FButton
                android:id="@+id/updateAddressButton"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_gravity="center_horizontal"
                android:text="UPDATE"
                android:textColor="@color/colorWhite"
                android:textSize="18sp"
                android:textStyle="bold"
                fbutton:cornerRadius="5dp"
                fbutton:fButtonColor="#AE6F33"
                fbutton:shadowColor="#AE6F33" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>